<section id="main">
    <input id="toggle-all" type="checkbox" onclick="update_task(0,this)" {% if left_task == 0 %} checked="checked" {% endif %} >
    <label for="toggle-all">Mark all as complete</label>
    <ul id="todo-list">
        {% for task in tasks %}
            <li data-id="{{ task.id }}">
                <div class="view">
                    <input class="toggle" type="checkbox" name="task_id[]" value="{{ task.id }}" {% if task.status == 2 %}checked="checked" {% endif %} onclick="update_task({{ task.id }},this)">
                    <label>{{ task.name }}</label>
                    <button class="destroy" onclick="delete_task({{ task.id }})"></button>
                </div>
                <input class="edit" value="new test">
            </li>
        {% endfor %}
    </ul>
</section>

<footer id="footer" style="display: block;">
    <span id="todo-count"><strong>{{ left_task }}</strong> items left</span>
    <ul id="filters">
        <li>
            <a class="selected" href="javascript:void(0);"  onclick="listtasks(0)">All</a>
        </li>
        <li>
            <a href="javascript:void(0);"  onclick="listtasks(1)">Active</a>
        </li>
        <li>
            <a href="javascript:void(0);"  onclick="listtasks(2)">Completed</a>
        </li>
    </ul>

    {% if completed_task > 0 %}
        <button id="clear-completed" onclick="delete_task(0)">Clear completed</button>
    {% endif %}
</footer>
